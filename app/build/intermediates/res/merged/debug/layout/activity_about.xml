<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E7E9"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.kufeed.about">
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="3dp"
        android:minWidth="330dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">
            <TextView
                android:id="@+id/kuTxtView"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:text="About Kathmandu University"
                android:textSize="20sp"
                android:textColor="#2980B9"
                android:textStyle="bold"
                android:background="#E5E7E9"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:id="@+id/ku_imageView"
                android:src="@drawable/kumain"/>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:background="#B0B3B5"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <Button
                    android:id="@+id/introBtn"
                    android:text="Introduction"
                    android:textAllCaps="false"
                    android:textColor="@drawable/colorselector"
                    android:textSize="20sp"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:background="@drawable/buttonshape1"
                    android:shadowColor="#A8A8A8"
                    android:paddingBottom="10dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:onClick="introBtn"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage1"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="#E5E7E9"/>

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:background="#B0B3B5"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            >
         <Button
            android:id="@+id/objectBtn"
             android:text="Objectives And Thrust"
             android:textAllCaps="false"
             android:textColor="@drawable/colorselector"
            android:textSize="20sp"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape1"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
             android:onClick="objectBtn" />
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage2"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="#E5E7E9"/>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:background="#B0B3B5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >


                <Button
                    android:id="@+id/strategyBtn"
                    android:text="Strategy"
                    android:textColor="@drawable/colorselector"
                    android:textSize="20sp"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:background="@drawable/buttonshape1"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:textAllCaps="false"
                    android:onClick="strategyBtn"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage3"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="#E5E7E9"/>


            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:background="#B0B3B5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >


                <Button
                    android:id="@+id/constutionBtn"
                    android:text="Constitution"
                    android:textAllCaps="false"
                    android:textColor="@drawable/colorselector"
                    android:textSize="20sp"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:background="@drawable/buttonshape1"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:onClick="constitutionBtn"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage4"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="#E5E7E9"/>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:background="#B0B3B5"
                android:paddingTop="5dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                >


                <Button
                    android:id="@+id/adminBtn"
                    android:text="Administration"
                    android:textAllCaps="false"
                    android:textColor="@drawable/colorselector"
                    android:textSize="20sp"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:background="@drawable/buttonshape1"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:onClick="adminBtn"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage5"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="#E5E7E9"/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>
