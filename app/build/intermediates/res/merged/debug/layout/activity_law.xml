<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_law"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.kufeed.law"
    android:weightSum="1">

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:minWidth="310dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2980B9"
            android:weightSum="4">


    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Kathmandu University>> Schools>>"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School of Law"
        android:textSize="16sp"
        android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="596dp"
                android:layout_height="4dp"
                android:background="#1A044B"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@drawable/law"
        android:id="@+id/imageView"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage"
                android:textColor="#000000"
                />


            </LinearLayout>
    </ScrollView>


</LinearLayout>
