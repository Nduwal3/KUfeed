<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seminar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7E9"
    android:orientation="vertical"
    tools:context="com.example.android.kufeed.internalku">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#7986CB"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="200dp"
                android:background="@drawable/buttonshape2"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:id="@+id/button1"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:fontFamily="@string/bottom_sheet_behavior"
                android:onClick="button1"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="0.60"
                android:textColor="@drawable/colorselector"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A6ACAF"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="200dp"
                android:background="@drawable/button3"
                android:layout_height="wrap_content"
                android:text="KU_Events"
                android:id="@+id/button2"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:fontFamily="@string/bottom_sheet_behavior"
                android:onClick="button2"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="0.60"
                android:textColor="@drawable/colorselector"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7986CB"
            android:weightSum="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="200dp"
                android:background="@drawable/buttonshape2"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:id="@+id/button3"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:fontFamily="@string/bottom_sheet_behavior"
                android:onClick="button3"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="0.60"
                android:textColor="@drawable/colorselector"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A6ACAF"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="200dp"
                android:background="@drawable/button3"
                android:layout_height="wrap_content"
                android:text="DOCSE-Routine"
                android:id="@+id/button4"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:fontFamily="@string/bottom_sheet_behavior"
                android:onClick="button4"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="0.60"
                android:textColor="@drawable/colorselector"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
